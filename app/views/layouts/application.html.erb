<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title><%= page_title %></title>
  <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.1.0/pure-min.css">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
<div class="pure-g-r" id="layout">

<a href="#menu" id="menuLink" class="pure-menu-link">
<%= image_tag 'navicon-png2x.png', :width => '20' %>
</a>


<div class="pure-u" id="menu">
  <div class="pure-menu pure-menu-open">
    <a class="pure-menu-heading" href="/">Ariake</a>

    <ul>
      <li class="">
        <a href="">Login</a>
      </li>
      
      <li class="
      <%= request.path_info == "/entries"? "pure-menu-selected" : ""%>
      menu-item-divided">
        <%= link_to "Entries", entries_path %>
      </li>
    
      <li class="
      <%= request.path_info == "/maps"? "pure-menu-selected" : ""%>
      ">
        <%= link_to "Maps", maps_path %>
      </li>
    
    </ul>
  </div>
</div>

<div class="pure-u" id="main">

<div class="alert-box">
<% if flash[:info] %>
<div class="alert alert-info">
<button type="button" class="close" data-dismiss="alert">&times;</button>
<%= flash[:info] %></div>
<% end %>
<% if flash[:success] %>
<div class="alert alert-success">
<button type="button" class="close" data-dismiss="alert">&times;</button>
<%= flash[:success] %></div>
<% end %>
<% if flash[:error] %>
<div class="alert alert-error">
<button type="button" class="close" data-dismiss="alert">&times;</button>
<%= flash[:error] %></div>
<% end %>
</div>

<%= yield %>

</div>
</div>

  <script type="text/javascript">
  var menu = document.getElementById('menu'),
    menuLink = document.getElementById('menuLink'),
    layout = document.getElementById('layout'),

    toggleClass = function (element, className) {
        var classes = element.className.split(/\s+/),
            length = classes.length,
            i = 0;

        for(; i < length; i++) {
          if (classes[i] === className) {
            classes.splice(i, 1);
            break;
          }
        }
        // The className is not found
        if (length === classes.length) {
            classes.push(className);
        }

        element.className = classes.join(' ');
    };

    menuLink.onclick = function (e) {
        e.preventDefault();
        var active = 'active';
        toggleClass(layout, active);
        toggleClass(menu, active);
    };

  </script>




</body>
</html>
